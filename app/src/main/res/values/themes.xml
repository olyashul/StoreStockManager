<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Базовая тема приложения -->
    <style name="Theme.StoreStockManager" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Основные цвета -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/primary_blue_light</item>
        <item name="colorSecondary">@color/accent_blue</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Фон -->
        <item name="android:windowBackground">@color/background_light</item>
        <item name="android:statusBarColor">@color/primary_blue</item>
        <item name="android:editTextColor">@color/text_dark</item>
        <item name="android:textColorHint">@color/text_gray</item>
    </style>

    <!-- Тема без ActionBar для активности -->
    <style name="Theme.StoreStockManager.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Тема для Toolbar -->
    <style name="ThemeOverlay.StoreStockManager.Toolbar" parent="">
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>

    </style>
</resources>